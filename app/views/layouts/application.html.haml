!!! 5
%html(lang='en')
  %head
    %title PhraseBook
    %meta(charset='utf-8')
    %meta(name='viewport' content='width=device-width, initial-scale=1.0')
    %meta(name='author' content='Haukur Páll Hallvarðsson')
    %meta(name='description' content='Learn phrases in different languages.')
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootswatch/3.2.0/sandstone/bootstrap.min.css'
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'
    = stylesheet_link_tag '//cdn.jsdelivr.net/flag-icon-css/0.6.0/css/flag-icon.min.css'
    = stylesheet_link_tag 'application'
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          %button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='.navbar-collapse')
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand(href='/') PhraseBook
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li{class: active(root_path)}= link_to 'Phrases', root_path
            %li{class: active(new_path)}= link_to 'New phrase', new_path
            %li{class: active(about_path)}= link_to 'About', about_path
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li= link_to current_user.email, '#'
              %li{class: active(destroy_user_session_path)}= link_to 'Log out', destroy_user_session_path
            - else
              %li{class: active(new_user_session_path)}= link_to 'Log in', new_user_session_path
    .container#body
      = yield
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/js/bootstrap.min.js'
    = javascript_include_tag 'application'
