.row
  %form.col-sm-offset-3.col-sm-6(action='/create' method='POST')
    = hidden_field_tag :authenticity_token, form_authenticity_token
    %h1 New phrase
    .form-group
      %label Phrase
      %input.form-control(type='text' name='phrase' autofocus)
    .form-group
      %label Language
      %select.form-control(name='language')
        %option(selected disabled) < Select one >
        %option(value='en') English
        %option(value='br') Brazilian Portuguese
        %option(value='is') Icelandic
    .form-group
      %button.btn.btn-success.btn-block(type='submit') Submit
