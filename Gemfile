source 'https://rubygems.org'

ruby '2.1.3'

# Web framework
gem 'rails', '4.1.6'

# Ruby interface for PostgreSQL
gem 'pg'

# Application server
gem 'thin', require: false

# Registration and authentication
gem 'devise'

# Social registration and authentication
gem 'omniauth-google-oauth2'
gem 'omniauth-facebook'

# Templating engines
gem 'haml-rails'

# Alternative database querying library
gem 'sequel'

# Database extension for foreign keys
gem 'foreigner'

# Replacement for IRB as an interpreter
gem 'pry-rails'

# Cron jobs
gem 'whenever', require: false

# HTTP caching
gem 'rack-cache'

# Native C #blank?
gem 'fast_blank'

# Native C JSON serialization
gem 'oj'

group :development do
  # Asset pipeline compilers
  gem 'coffee-rails', require: false
  gem 'sass-rails', '~> 4.0.3'

  # Asset compression
  gem 'uglifier', require: false

  # Pretty printing
  gem 'awesome_print'

  # Migrations generator for foreigner
  gem 'immigrant'

  # Show page load times and queries; show a flamegraph
  #gem 'rack-mini-profiler', '~> 0.9.0.pre'
  #gem 'flamegraph'

  # Better error pages
  gem 'better_errors'
  gem 'binding_of_caller', require: false

  # Pre-load Rails environment
  gem 'spring'
end
